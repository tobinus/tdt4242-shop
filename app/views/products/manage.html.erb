<h1 class="header-with-button">Manage Products</h1>
<%= link_to 'New Product', new_product_path, class: 'btn btn-primary pull-right header-button' %>

<table class="table table-striped margin-top-medium margin-bottom-large">
  <thead>
  <tr>
    <th>Product</th>
    <th class="text-right">Price</th>
    <th class="text-right">Stock level</th>
    <th class="text-right">Actions</th>
  </tr>
  </thead>
  <tbody>
  <% @products.each do |product| %>
    <tr>
      <td><strong><%= product.name %></strong><br /><%= product.description %></td>
      <td class="text-right"><%= number_to_currency(product.price) %></td>
      <td class="text-right">
        <nobr>
          <%= form_for product, :remote => true, :html => {class: 'form-inline'} do |f| %>
            <%= f.number_field(:stock_level, in: 0..100000, step: 1, class: "form-control form-field-small", disabled: true) %>
            <%= f.submit('Save', disabled: true) %>
          <% end %>
        </nobr>
      </td>
      <td class="text-right">
        <nobr>
          <%= link_to 'Edit', edit_product_path(product), class: 'btn btn-default' %>
          <%= link_to 'Remove', product, class: 'btn btn-default', method: :delete, data: { confirm: 'Are you sure that you want to delete this product?' } %>
        </nobr>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>